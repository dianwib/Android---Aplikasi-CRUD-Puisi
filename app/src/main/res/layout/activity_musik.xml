<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#2196F3"
    android:orientation="vertical"
    tools:context=".MusikActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".2"
        android:background="@drawable/login_gradien" >

    </ScrollView>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:onClick="fungsiback"
        app:srcCompat="@drawable/button_home"
        tools:ignore="VectorDrawableCompat" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"

        android:orientation="vertical">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent" />

        <TextView
            android:padding="2dp"
            android:id="@+id/textViewJudulVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#064170"
            android:text='"Silahkan Pilih Musik"'
            android:textAlignment="center"
            android:textColor="#F2F7F6"
            app:fontFamily="@font/amita" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@id/imageView4"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_musik0"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="musik0"
                android:text="Resah - Payung Teduh" />

            <Button
                android:id="@+id/button_musik1"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="musik1"
                android:text="Rahasia - Payung Teduh" />

            <Button
                android:id="@+id/button_musik2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="musik2"
                android:text="Biarkan - Payung Teduh" />

            <Button
                android:id="@+id/button_musik3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="musik3"
                android:text="Akad - Payung Teduh" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>