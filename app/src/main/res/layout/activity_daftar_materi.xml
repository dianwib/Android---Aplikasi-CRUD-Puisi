<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background=" #8bc24a"
    android:orientation="vertical"
    tools:context=".DaftarMateriActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".2"
        android:background="@drawable/login_gradien" />


    <ImageView

        android:id="@+id/imageView4"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:onClick="fungsiback"
        app:srcCompat="@drawable/button_home"
        tools:ignore="VectorDrawableCompat" />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button

            android:id="@+id/button_materi1"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/button_karakterpuisi"
            android:onClick="materi2"
            android:padding="10dp" />

        <Button
            android:id="@+id/button_materi0"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/button_defpuisi"
            android:onClick="materi0"
            android:layout_marginTop="10dp"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/button_materi2"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/button_jenispuisi"
            android:onClick="materi1"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/button_materi3"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/button_unsurpuisi"
            android:onClick="materi3"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</RelativeLayout>