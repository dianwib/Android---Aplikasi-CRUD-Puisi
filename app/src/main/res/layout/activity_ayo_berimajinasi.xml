<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#8BC34A"
    android:orientation="vertical"
    tools:context=".AyoBerimajinasiActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".2"
        android:background="@drawable/login_gradien" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:onClick="fungsiback"
        app:srcCompat="@drawable/button_home"
        tools:ignore="VectorDrawableCompat" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_createdata"
            android:layout_width="240dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_buatpuisi" />

        <Button
            android:id="@+id/bt_viewdata"
            android:layout_width="240dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_daftarpuisi" />

    </LinearLayout>

</RelativeLayout>